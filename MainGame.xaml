<Window x:Class="Test_Game.MainGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Game"
        mc:Ignorable="d"
        
        Title = "Snake! The musical Beta" Height="600" Width="800" WindowStyle="ThreeDBorderWindow">
   
    <Window.Effect>
        <DropShadowEffect BlurRadius="10"/>
    </Window.Effect>
    <Canvas Name ="paintCanvas" Background="White" Grid.Column="1" HorizontalAlignment="Stretch">

        <StackPanel>
            <Button Name="btnPause" Click="btnPause_Click" Foreground="Black">Pause</Button>

        </StackPanel>
    </Canvas>
</Window>

