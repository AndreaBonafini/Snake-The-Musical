<Window x:Class="Test_Game.menuPause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_Game"
        mc:Ignorable="d"
        Title="Menu" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Name="PauseTitle">
        <Label Name="lblPause" FontSize="56">Paused</Label>
        <Label Name="Empty" FontSize="26" Foreground="White">Space</Label>
        <Button Name="btnResume" Click="btnResume_Click">Resume</Button>
        <Button Name="btnSettings" Click="btnSettings_Click">Settings</Button>
        <Button Name="btnExit" Click="btnExit_Click">Exit Game</Button>
    </StackPanel>
</Window>
